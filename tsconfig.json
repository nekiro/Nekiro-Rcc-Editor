{
	"compilerOptions": {
		"allowJs": true,
		"module": "commonjs",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"baseUrl": ".",
		"outDir": "dist",
		"jsx": "react",
		"target": "ES2021",
		"strict": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"paths": {
			"*": [
				"node_modules/*"
			]
		}
	},
	"include": [
		"src/**/*"
	]
}